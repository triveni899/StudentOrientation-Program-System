<project name="studentOrientation" default="compile_all" basedir=".">

  <property name="BUILD.compiler"       value="modern"/>
  <property name="src"                  value="src"/>
  <property name="BUILD"                value="BUILD"/>
  <property name="classes"              value="${BUILD}/classes"/>


  <target name="all" depends="compile_all"/>

  <target name="compile_all"
          depends="studentOrientation"/>

  <target name="clean">
       <delete dir="${BUILD}"/>
  </target>

  <!-- Prepare target directories -->
  <target name="prepare">
        <mkdir dir="${BUILD}"/>
        <mkdir dir="${classes}"/>
  </target>


 <target name="jar">
        <mkdir dir="${BUILD}/jar"/>
        <jar destfile="${BUILD}/jar/studentOrientation.jar" basedir="${BUILD}/classes">
            <manifest>
                <attribute name="Main-Class" value="studentOrientation.driver.Driver"/>
            </manifest>
        </jar>
    </target>



  <!-- ** means all subdirectories as well -->
  <!-- * means all files in the current directory -->
  <!-- for just java files use *.java -->

  <target name="studentOrientation" depends="prepare">
    <javac srcdir="${src}"
           includes="studentOrientation/**"
           excludes="**/package.html"
           destdir="${classes}"
           classpath="${classes}"
           debug="on"
           optimize="on"
		   includeantruntime="false"
           deprecation="off"/>
  </target>


<target name="run" depends="jar">
        <java jar="${BUILD}/jar/studentOrientation.jar"  fork="true">
		<arg value="${arg0}"/>
		<arg value="${arg1}"/>
		<arg value="${arg2}"/>
		<arg value="${arg3}"/>
        </java>
	
    </target>

	<target name="tarzip" depends="clean">
	        <delete file="../../Banpela_triveni_Chadella_sumanth.tar.gz" quiet="true" />
	        <tar destfile="../../Banpela_triveni_Chadella_sumanth.tar.gz"
	             basedir="../../.."
	             includes="Banpela_triveni_Chadella_sumanth/**"
	             compression="gzip"/>
	</target>
	
	<target name="untar">
	    <untar src="Banpela_triveni_Chadella_sumanth.tar.gz" dest="." compression="gzip"/>
	</target>


</project>
